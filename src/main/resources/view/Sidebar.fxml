<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>


<?import javafx.scene.control.ToggleButton?>
<VBox VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1">
    <HBox HBox.hgrow="NEVER" minWidth="200" prefWidth="200">
        <BorderPane id="sidebar" fx:id="sidebar" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
            <top>
                <HBox spacing="15" alignment="CENTER">
                    <ImageView>
                        <image>
                            <Image url="@/images/phonebook_icon.png"/>
                        </image>
                        <fitWidth>50</fitWidth>
                        <fitHeight>50</fitHeight>
                    </ImageView>
                    <Label fx:id="username" text="I'm the HR" HBox.hgrow="ALWAYS"/>
                </HBox>
            </top>
        </BorderPane>
    </HBox>
    <Region minWidth="200" prefHeight="200"/>
    <HBox HBox.hgrow="NEVER" minWidth="200" prefWidth="200" alignment="CENTER">
        <ToggleButton id="toggleEmployees" fx:id="toggleEmployees" text="Employees">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </ToggleButton>
    </HBox>
    <HBox HBox.hgrow="NEVER" minWidth="200" prefWidth="200" alignment="CENTER">
        <ToggleButton id="toggleDepartments" fx:id="toggleDepartments" text="Departments">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </ToggleButton>
    </HBox>
</VBox>
